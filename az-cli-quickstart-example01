## Quickstart: Create a Linux virtual machine with the Azure CLI




# Create a resource group
az group create --name myResourceGroup --location eastus


# Create virtual machine
az vm create \
  --resource-group myResourceGroup \
  --name myVM \
  --image UbuntuLTS \
  --admin-username azureuser \
  --generate-ssh-keys


# Open port 80 for web traffic
az vm open-port --port 80 --resource-group myResourceGroup --name myVM

# Connect to virtual machine
ssh azureuser@publicIpAddress


# Install web server
sudo apt-get -y update
sudo apt-get -y install nginx

# Clean up resources
az group delete --name myResourceGroup


# Others - Understand VM images
az vm image list --output table
az vm image list --offer CentOS --all --output table

# Others - Find available VM sizes
az vm list-sizes --location eastus --output table


# Others - Create VM with specific size
az vm create \
    --resource-group myResourceGroupVM \
    --name myVM3 \
    --image UbuntuLTS \
    --size Standard_F4s \
    --generate-ssh-keys


# Others - Resize a VM
az vm show --resource-group myResourceGroupVM --name myVM --query hardwareProfile.vmSize
az vm list-vm-resize-options --resource-group myResourceGroupVM --name myVM --query [].name
az vm resize --resource-group myResourceGroupVM --name myVM --size Standard_DS4_v2
az vm deallocate --resource-group myResourceGroupVM --name myVM
az vm resize --resource-group myResourceGroupVM --name myVM --size Standard_GS1
az vm start --resource-group myResourceGroupVM --name myVM



# Others - Find the power state
az vm get-instance-view \
    --name myVM \
    --resource-group myResourceGroupVM \
    --query instanceView.statuses[1] --output table

# Others - Get IP address
az vm list-ip-addresses --resource-group myResourceGroupVM --name myVM --output table


# Others - Stop virtual machine
az vm stop --resource-group myResourceGroupVM --name myVM


# Others - Start virtual machine
az vm start --resource-group myResourceGroupVM --name myVM


# Others - Delete resource group
az group delete --name myResourceGroupVM --no-wait --yes


# Others - Attach disk at VM creation
az vm create \
  --resource-group myResourceGroupDisk \
  --name myVM \
  --image UbuntuLTS \
  --size Standard_DS2_v2 \
  --generate-ssh-keys \
  --data-disk-sizes-gb 128 128




# Others - Attach disk to existing VM
az vm disk attach \
    --resource-group myResourceGroupDisk \
    --vm-name myVM \
    --disk myDataDisk \
    --size-gb 128 \
    --sku Premium_LRS \
    --new

# Others - Create snapshot

osdiskid=$(az vm show \
   -g myResourceGroupDisk \
   -n myVM \
   --query "storageProfile.osDisk.managedDisk.id" \
   -o tsv)

az snapshot create \
    --resource-group myResourceGroupDisk \
    --source "$osdiskid" \
    --name osDisk-backup


# Others - Create disk from snapshot
az disk create \
   --resource-group myResourceGroupDisk \
   --name mySnapshotDisk \
   --source osDisk-backup


# Others - Restore virtual machine from snapshot

az vm delete \
--resource-group myResourceGroupDisk \
--name myVM

az vm create \
    --resource-group myResourceGroupDisk \
    --name myVM \
    --attach-os-disk mySnapshotDisk \
    --os-type linux


# Others - Reattach data disk
datadisk=$(az disk list \
   -g myResourceGroupDisk \
   --query "[?contains(name,'myVM')].[id]" \
   -o tsv)

# Others -
az vm disk attach \
   â€“g myResourceGroupDisk \
   --vm-name myVM \
   --disk $datadisk








